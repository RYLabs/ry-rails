default: &default
  adapter: postgresql
  encoding: unicode
  host: <%%= ENV['DATABASE_HOST'] || 'localhost' %>
  username: <%%= ENV['DATABASE_USER'] || 'postgres' %>
  password: <%%= ENV['DATABASE_PASSWORD'] || '' %>
  pool: 5

development:
  <<: *default
  database: <%= @app_name %>_development

test:
  <<: *default
  database: <%= @app_name %>_test
